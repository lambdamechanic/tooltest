#!/usr/bin/env sh

set -u

base_ref=""
if git rev-parse -q --verify ORIG_HEAD >/dev/null 2>&1; then
    base_ref="ORIG_HEAD"
elif git rev-parse -q --verify HEAD@{1} >/dev/null 2>&1; then
    base_ref="HEAD@{1}"
fi

if [ -z "$base_ref" ]; then
    exit 0
fi

"$(dirname "$0")/_br_sync_import.sh" "rewrite" "$base_ref" "HEAD"
